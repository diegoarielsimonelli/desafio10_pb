doctype
html(lang="en")
    
    head 
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")    
        title 
            h1  All Bikes




    body 
        p(class="h2") Vista de Productos
  

        if productos == undefined ||productos.length === 0
            p(class="h2") No hay productos
        else
            table(class="table")
                thead
                    tr
                        th Nombre
                        th Precio
                        th Link a Imagenes
                    
                tbody
                    each producto in productos
                        tr
                            td
                                = producto.nombre
                            td
                                = producto.precio
                            td
                                img(src=producto.foto)
                      


    
    footer 
        a(href="./list-productos" class="btn btn-primary") Lista de Productos
        a(href="./form" class="btn btn-primary") Formulario
   
    