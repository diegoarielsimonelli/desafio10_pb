

<!DOCTYPE html>
<html lang="en">
  
  <head>
  <meta charset="UTF-8">
  <title>All Bikes</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <header><include('../partials/header')</include>></header>

    <main>
      <p class="h2">Vista de Productos</p>

    if (productos == undefined ||productos.length === 0)
    <div class="p-3 mb-2 bg-warning text-dark">No se Encontraron Productos</div>
     else{{#each productos}}
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">{{nombre}}</h5>
        <p class="card-text">{{descripcion}}</p>
        <p class="card-text">{{precio}}</p>
        <p class="card-text">{{categoria}}</p>
        <p class="card-text">{{stock}}</p>
        <a href="{{url}}" class="btn btn-primary">Ver</a>
      </div>
    </div>
  {{/each}}
  {{/if}}
    </main>

    <footer><include('../partials/footer')</include></footer>  
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
    <tbody>
      productos.forEach(function(producto){
        <tr>
          <td>{{producto.nombre}}</td>
          <td>{{producto.precio}}</td>
          <td><img src="{{producto.foto}}" width="100" height="100"></td>
        </tr>
      })
      
  </tbody>
  </table>
      
<p> </p>
<center>
    <a href="./list-productos" class="btn btn-primary">Lista de Productos</a>
    <a href="./form" class="btn btn-primary">Formulario</a>
</center>
    </main>

  </body>
</html>